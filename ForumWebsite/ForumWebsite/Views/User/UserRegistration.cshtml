@model ForumWebsite.Models.user_Tb
<div class="indica page registration">
    <div class="container">
        <div class="col-md-9 posta">
            <h3>
                <strong>會員註冊</strong>
                <label1></label1>
            </h3>
            @using (Html.BeginForm("AddUserRegistration", "User", FormMethod.Post, new { @class = "form-horizontal regis_form" }))
            {
                @Html.AntiForgeryToken()
                <div class="control-group">
                    @Html.LabelFor(m => m.account, new { @class = "control-label" })
                    @Html.TextBoxFor(m => m.account, new { @class = "control", placeholder = "請設定5-16位英數字混合帳號" })
                    @Html.ValidationMessageFor(m => m.account)
                    @ViewBag.accountError
                </div>
                <div class="control-group">
                    @Html.LabelFor(m => m.password, new { @class = "control-label" })
                    @Html.TextBoxFor(m => m.password, new { type = "password", @class = "control", placeholder = "請設定6-15位英數字混合密碼，英文需區分大小寫" })
                    @Html.ValidationMessageFor(m => m.password)
                </div>
                <div class="control-group">
                    <label for="passwordCompare">確認密碼</label>
                    <input id="passwordCompare" class="control" type="password" name="passwordCompare" placeholder="請再輸入一次密碼" value="@TempData["passwdCompare"]" />
                    @ViewBag.passwdCompareError
                </div>
                <div class="control-group">
                    @Html.LabelFor(m => m.username, new { @class = "control-label" })
                    @Html.TextBoxFor(m => m.username, new { @class = "control", placeholder = "請輸入您的名稱" })
                    @Html.ValidationMessageFor(m => m.username)
                </div>
                <div class="control-group">
                    @Html.LabelFor(m => m.gender, new { @class = "control-label" })
                    @Html.RadioButton("gender", "true", true, new { style = "width:0px" }) 男性
                    @Html.RadioButton("gender", "false", false, new { style = "width:0px" }) 女性
                    @Html.ValidationMessageFor(m => m.gender)
                </div>
                <div class="control-group">
                    @Html.LabelFor(m => m.birthday, new { @class = "control-label" })
                    @Html.TextBoxFor(m => m.birthday, new { @class = "control", placeholder = "2020/1/1" })
                    @Html.ValidationMessageFor(m => m.birthday)
                </div>
                <div class="control-group">
                    @Html.LabelFor(m => m.email, new { @class = "control-label" })
                    @Html.TextBoxFor(m => m.email, new { @class = "control", placeholder = "abc@abc.com.tw" })
                    @Html.ValidationMessageFor(m => m.email)
                </div>
                <div class="control-group">
                    <button class="btn btn-warning" type="submit">送出</button>
                    <button class="btn btn-default" type="reset">重設</button>
                </div>
            }
        </div>
        @{
            Html.RenderAction("_RightArticleReply", "Home");
        }
        <div class="clearfix"> </div>
    </div>
</div>
